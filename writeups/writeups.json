---
layout: null
---

[  {% assign writeups_folders = site.html_pages | where_exp: "item", "item.path contains 'writeups/articles/WriteupNo'" %}
  {% assign sorted_writeups = writeups_folders | sort: "path" | reverse %}
  {% for writeup in sorted_writeups %}
    {% if writeup.path contains "post.md" %}      {% assign folder_name = writeup.path | split: "/" | slice: -2, 1 | first %}
      {% assign writeup_number = folder_name | remove: "WriteupNo" %}
      {
        "id": "{{ writeup_number }}",
        "title": "{{ writeup.title | escape }}",
        "description": "{{ writeup.description | escape }}",
        "date": "{{ writeup.date | date_to_xmlschema }}",
        "summary": "{{ writeup.content | strip_html | truncatewords: 50 | escape }}",
        "url": "{{ writeup.url | relative_url }}",
        "author": "{{ writeup.author | escape }}",
        "profile_picture": "{{ writeup.profile_picture | escape }}",
        "thumbnail": "{{ '/writeups/articles/WriteupNo' | append: writeup_number | append: '/thumbnail.svg' | relative_url }}",
        "tags": [
          {% if writeup.tags %}
            {% for tag in writeup.tags %}
              "{{ tag }}"{% unless forloop.last %},{% endunless %}
            {% endfor %}
          {% else %}
            "writeup", "bugbounty"
          {% endif %}
        ]
      }{% unless forloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
]